@model SmartGrower.ViewModels.RelatorioVm


@{ ViewData["Title"] = "Home"; }
<script src="~/js/gauge.min.js"></script>

<div class="row">


    <div class="col-lg-12 text-center ">

        <span clase="text-center fs-1 s-1"> <b>@Model.LastSet.DateOnlyString @Model.LastSet.TimeOnlyString</b></span>
    </div>
</div>
<br />
<br />

<div class="album py-5 bg-light">
    <div class="container">

        <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
            <div class="col">
                <div class="card shadow-sm">
                    <div class="bd-placeholder-img card-img-top text-center" width="100%" height="225"   >
                        <canvas data-type="radial-gauge"
                                data-major-ticks="0, 20, 40,  60, 80, 100, 120,130,140,150,160,170,180,190,200"
                                data-title="Humidade do Solo"
                                data-units="%"
                                data-width="300"
                                data-height="300"
                                data-value-int="0"
                                data-value-dec="0"
                                data-value="@Model.LastSet.HumidadeSolo"
                                data-min-value="0"
                                data-max-value="200"
                                data-highlights="true"
                                data-color-stroke-ticks="#008000"></canvas>
                    </div>

                    <div class="card-body">
                        <p class="card-text">This is a wider card with supporting text below as a natural lead-in to additional content. This content is a little bit longer.</p>
                        <div class="d-flex justify-content-between align-items-center">
                            <div class="btn-group">
                                <button type="button" class="btn btn-sm btn-outline-secondary">View</button>
                                <button type="button" class="btn btn-sm btn-outline-secondary">Edit</button>
                            </div>
                            <small class="text-muted">9 mins</small>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col">
                <div class="card shadow-sm">
                    <div class="bd-placeholder-img card-img-top text-center" width="100%" height="225">
                        <canvas data-type="radial-gauge"
                                data-major-ticks="0, 20, 40,  60, 80, 100, 120,130,140,150,160,170,180,190,200"
                                data-title="Temperatura"
                                data-units="%"
                                data-width="300"
                                data-height="300"
                                data-value-int="0"
                                data-value-dec="0"
                                data-value="@Model.LastSet.TemperaturaString"
                                data-min-value="0"
                                data-max-value="200"
                                data-highlights="true"
                                data-color-stroke-ticks="#008000"></canvas>
                    </div>
                    <div class="card-body">
                        <p class="card-text">This is a wider card with supporting text below as a natural lead-in to additional content. This content is a little bit longer.</p>
                        <div class="d-flex justify-content-between align-items-center">
                            <div class="btn-group">
                                <button type="button" class="btn btn-sm btn-outline-secondary">View</button>
                                <button type="button" class="btn btn-sm btn-outline-secondary">Edit</button>
                            </div>
                            <small class="text-muted">9 mins</small>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col">
                <div class="card shadow-sm">
                    <div class="bd-placeholder-img card-img-top text-center" width="100%" height="225">
                    <canvas data-type="radial-gauge"
                            data-major-ticks="0, 20, 40,  60, 80, 100, 120,130,140,150,160,170,180,190,200"
                            data-title="Humidade AR"
                            data-units="dB"
                            data-width="300"
                            data-height="300"
                            data-value-int="0"
                            data-value-dec="0"
                            data-value="@Model.LastSet.HumidadeArString"
                            data-min-value="0"
                            data-max-value="200"
                            data-highlights="true"
                            data-color-stroke-ticks="#0000FF"></canvas>
                            </div>
                    <div class="card-body">
                        <p class="card-text">This is a wider card with supporting text below as a natural lead-in to additional content. This content is a little bit longer.</p>
                        <div class="d-flex justify-content-between align-items-center">
                            <div class="btn-group">
                                <button type="button" class="btn btn-sm btn-outline-secondary">View</button>
                                <button type="button" class="btn btn-sm btn-outline-secondary">Edit</button>
                            </div>
                            <small class="text-muted">gggg</small>
                        </div>
                    </div>
                </div>


            </div>


 
        </div>
    </div>
</div>

